<% provide(:title, @user.name) %>
<style>

#left-column {
	float:left;
	width:200px;
}
#right-column {
	float:right;
	width:720px;
}
</style>

  <div id="header">
    <section>
      <h1>
        <%= gravatar_for @user, 80 %>
        <%= @user.name %>
        </h1>
<br>
<hr>
</div>
    
	<div id="left-column">
	<h2>
	
	  <%= link_to "Add Locations", add_path, class: "btn  btn-info btn-block" %>
	<li> </li>
	<%= link_to "Location Index", index_path, class: "btn  btn-info btn-block" %>
<li> </li>
	<%= link_to "Randomize!", random_path, class: "btn  btn-primary btn-block" %> 
	
	<hr>
	<%= link_to "Create Micropost", "/microposts/new" , class: "btn btn-primary btn-block"%>
	<li></li>
	<%= link_to "Micropost Feed", "/microposts/feed" , class: "btn btn-primary btn-block"%>
	 <hr> 
	</h2>
      </div>

<div id="right-column">
	<%= render 'follow_form' if signed_in?%>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>

    </section>
  
</div>
