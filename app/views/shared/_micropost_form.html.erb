

<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new micropost...", onkeyup: "countChars('micropost_content','charcount');", onkeydown: "countChars('micropost_content','charcount');", onmouseout: "countChars('micropost_content','charcount');"%>
  </div>
<div id="chartext"><span id="charcount">0</span> characters entered. (Max: 140) </div><br>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>


