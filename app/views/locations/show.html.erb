<% provide(:title, @location.name) %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Food Type</th>
      <th>Cost</th>
      
    </tr>
  </thead>

  <tbody>
   
      <tr>
        <td><%= @location.name %></td>
        <td><%= @location.address %></td>
        <td><%= @location.food %></td>
        <td><%= @location.price %></td>
        <td>&nbsp<%= link_to ' Edit ', edit_location_path(@location) %>&nbsp</td>
        <td><%= link_to ' Destroy ', @location, method: :delete, data: { confirm: 'Are you sure?'}%></td>
        
      </tr>
    
  </tbody>
</table>

